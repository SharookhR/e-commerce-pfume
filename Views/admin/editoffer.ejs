    <script>
        function validateForm() {
    let isValid = true;

    const offerNameElement = document.getElementById("offerName");
    const offerName = offerNameElement ? offerNameElement.value.trim() : "";
    const offerNameError = document.getElementById("OfferNameError");
    if (!offerName) {
        offerNameError.textContent = "Offer name is required.";
        isValid = false;
    } else {
        offerNameError.textContent = "";
    }

    const offerTypeElement = document.getElementById("offerType");
    const offerType = offerTypeElement ? offerTypeElement.value : "";
    const offerTypeError = document.getElementById("OfferTypeError");
    if (!offerType) {
        offerTypeError.textContent = "Please select an offer type.";
        isValid = false;
    } else {
        offerTypeError.textContent = "";
    }

    const discountPercentageElement = document.getElementById("percentage");
    const discountPercentage = discountPercentageElement ? discountPercentageElement.value.trim() : "";
    const discountError = document.getElementById("discountError");
    if (!discountPercentage) {
        discountError.textContent = "Discount percentage is required.";
        isValid = false;
    } else if (isNaN(discountPercentage) || discountPercentage <= 0 || discountPercentage > 100) {
        discountError.textContent = "Please enter a valid percentage (1-100).";
        isValid = false;
    } else {
        discountError.textContent = "";
    }

    const startDateElement = document.getElementsByName("startDate")[0];
    const endDateElement = document.getElementsByName("endDate")[0];
    const startDate = startDateElement ? new Date(startDateElement.value) : null;
    const endDate = endDateElement ? new Date(endDateElement.value) : null;

    const dateError = document.getElementById("DateError");
    if (!startDate || isNaN(startDate)) {
        dateError.textContent = "Start date is required.";
        isValid = false;
    } else if (!endDate || isNaN(endDate)) {
        dateError.textContent = "End date is required.";
        isValid = false;
    } else if (endDate <= startDate) {
        dateError.textContent = "End date must be later than the start date.";
        isValid = false;
    } else {
        dateError.textContent = "";
    }

    return isValid;
}

function toggleApplicableFields() {
    const offerType = document.getElementById("offerType").value;
    document.getElementById("applicableProducts").classList.toggle("hidden", offerType !== "product");
    document.getElementById("applicableCategories").classList.toggle("hidden", offerType !== "category");
}

$(document).ready(function () {
    $('form').on('submit', function (e) {
        e.preventDefault();

        if (!validateForm()) {
            return;
        }

        const offerId = "<%= offer._id %>"; 
        const formData = $(this).serialize();

        $.ajax({
            type: 'POST',
            url: `/admin/editoffer/${offerId}`, 
            data: formData,
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message,
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/admin/offers';
                        }
                    });
                }
            },
            error: function (xhr) {
                const message = xhr.responseJSON?.message || "An unexpected error occurred.";
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: message,
                    confirmButtonText: 'OK'
                });
            }
        });
    });
});

        
    </script>

    
    
