    <script>
        let cropper;
        let currentFile;
        let currentImgElement;
        let filesArray = [];
        let existingImagesArray = [];
        let croppedFileIndex;

        const existingImages = JSON.parse(document.getElementById("productContainer").dataset.images);

        
        
        function initializeExistingImages() {
        existingImagesArray = existingImages; 
        renderImages(); 
    }

    document.addEventListener("DOMContentLoaded", function () {
        initializeExistingImages();
    });

        function handleFiles(event) {
            const newFiles = Array.from(event.target.files);
            newFiles.forEach(newFile => {
                const isDuplicate = filesArray.some(file => file.name === newFile.name && file.size === newFile.size);
                if (!isDuplicate) {
                    filesArray.push(newFile);
                }
            });
            renderImages();
            updateInputWithFiles();
        }
        function renderImages() {
    const imagePreviewContainer = document.getElementById("imagePreview");
    imagePreviewContainer.innerHTML = "";

    filesArray.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = (e) => {
            createImageElement(e.target.result, index, "new");
        };
        reader.readAsDataURL(file);
    });

    existingImagesArray.forEach((imageUrl, index) => {
        if (imageUrl) { 
            createImageElement(`/uploads/${imageUrl}`, index, "existing");
        }
    });
}

        function createImageElement(src, index, type) {
            const imagePreviewContainer = document.getElementById("imagePreview");

            const imgContainer = document.createElement("div");
            imgContainer.style.display = "inline-block";
            imgContainer.style.position = "relative";
            imgContainer.style.marginRight = "10px";

            const img = document.createElement("img");
            img.src = src;
            img.style.width = "100px";
            img.style.cursor = "pointer";
            img.onclick = () => openCropper(src, img, index, type);

            const removeButton = document.createElement("button");
            removeButton.innerText = "X";
            removeButton.style.position = "absolute";
            removeButton.style.top = "0";
            removeButton.style.right = "0";
            removeButton.style.backgroundColor = "red";
            removeButton.style.color = "white";
            removeButton.style.border = "none";
            removeButton.style.cursor = "pointer";

            if (type === "new") {
                removeButton.onclick = () => removeImage(index);
            } else {
                removeButton.onclick = () => removeExistingImage(src);
            }

            imgContainer.appendChild(img);
            imgContainer.appendChild(removeButton);
            imagePreviewContainer.appendChild(imgContainer);
        }
        function removeImage(index) {
            filesArray.splice(index, 1);
            renderImages();
            updateInputWithFiles();
        }
        let removedImages = []; 
        
function removeExistingImage(imageUrl) {
   
    if (!removedImages.includes(imageUrl)) {
        removedImages.push(imageUrl); 
    }
    console.log(removedImages);
    
    existingImagesArray = existingImagesArray.filter(img => `/uploads/${img}` !== imageUrl);
    renderImages(); 
}


        function openCropper(imageSrc, imgElement, index, type) {
            const cropModal = document.getElementById("cropModal");
            const croppingImage = document.getElementById("croppingImage");

            currentImgElement = imgElement;
            croppedFileIndex = index;
            currentFile = type === "new" ? filesArray[croppedFileIndex] : existingImagesArray[croppedFileIndex];

            croppingImage.src = imageSrc;
            cropModal.style.display = "block";

            if (cropper) cropper.destroy();
            cropper = new Cropper(croppingImage, {
                aspectRatio: 1,
                viewMode: 2,
            });
        }
        function cropImage() {
            const canvas = cropper.getCroppedCanvas();

            canvas.toBlob((blob) => {
                const croppedFile = new File([blob], currentFile.name, { type: 'image/png' });

                if (filesArray.includes(currentFile)) {
                    filesArray[croppedFileIndex] = croppedFile;
                } else {
                    existingImagesArray[croppedFileIndex] = croppedFile;
                }

                const dataTransfer = new DataTransfer();
                filesArray.forEach((file) => dataTransfer.items.add(file));
                const fileInput = document.getElementById('images');
                fileInput.files = dataTransfer.files;

                currentImgElement.src = URL.createObjectURL(croppedFile);
                document.getElementById("cropModal").style.display = "none";

                cropper.destroy();
                cropper = null;
            }, 'image/png');
        }

        function updateInputWithFiles() {
            const fileInput = document.getElementById('images');
            const dataTransfer = new DataTransfer();
            filesArray.forEach(file => dataTransfer.items.add(file));
            fileInput.files = dataTransfer.files;
        }

        function validateForm() {
    let isValid = true;

    const titleInput = document.getElementById("product_name");
    const descriptionInput = document.querySelector("[name='productDescription']");
    const priceInput = document.getElementById("price");
    const stockInput = document.getElementById("stock");
    const imagesInput = document.getElementById("images");

    document.getElementById("productTitleError").textContent = "";
    document.getElementById("productDescriptionError").textContent = "";
    document.getElementById("priceError").textContent = "";
    document.getElementById("stockError").textContent = "";
    document.getElementById("errorImage").textContent = "";

    if (titleInput.value.trim() === "") {
        document.getElementById("productTitleError").textContent = "Product title is required.";
        isValid = false;
    } else if (titleInput.value.length < 3) {
        document.getElementById("productTitleError").textContent = "Product title must be at least 3 characters long.";
        isValid = false;
    }

    if (descriptionInput.value.trim() === "") {
        document.getElementById("productDescriptionError").textContent = "Description is required.";
        isValid = false;
    } else if (descriptionInput.value.length < 10) {
        document.getElementById("productDescriptionError").textContent = "Description must be at least 10 characters long.";
        isValid = false;
    }

    if (priceInput.value.trim() === "") {
            priceError.textContent = "Price is required.";
            isValid = false;
        } else if (isNaN(priceInput.value) || priceInput.value <= 0) {
            priceError.textContent = "Please enter a valid price.";
            isValid = false;
        }

    if (stockInput.value.trim() === "" || isNaN(stockInput.value) || parseInt(stockInput.value) < 0) {
        document.getElementById("stockError").textContent = "Valid stock quantity is required.";
        isValid = false;
    }
    
    
    if (imagesInput.files.length === 0 && existingImagesArray.length === 0) {
        document.getElementById("errorImage").textContent = "Please upload at least one product image.";
        isValid = false;
    }

    return isValid;
}
console.log(filesArray);

        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();
                if (!validateForm()) {
                    return;
                }
                const form = $(this)[0];
                const formData = new FormData(form);
                formData.append('images', JSON.stringify(filesArray));
                
                existingImagesArray.forEach(image => {
        if (!removedImages.includes(image)) {
            formData.append('existingImages', image);
        }
        
    });
    
    // removedImages.forEach(image => {
    //     formData.append('removedImages', image);
    //     console.log(image);
        
    // });
    formData.append('removedImages', JSON.stringify(removedImages));

                
                
                const productId = $(this).data('id');
                $.ajax({
                    type: 'POST',
                    url: `/admin/editproduct/${productId}`,
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: response.message,
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = '/admin/products';
                                }
                            });
                        }
                    },
                    error: function (xhr) {
                        const message = xhr.responseJSON?.message || "An unexpected error occurred.";
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: message,
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    </script>

