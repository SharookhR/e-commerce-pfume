    <script>
        // JavaScript

let cropper;
let currentImgElement;
let filesArray = []; // To keep track of new images
let existingImagesArray = []; // To keep track of existing images
let croppedFileIndex; // To track the index of the cropped file

// Load existing images on page load (passed from server-side)
function loadExistingImages(existingImages) {
    const imagePreviewContainer = document.getElementById("imagePreview");
    existingImages.forEach((imageUrl, index) => {
        existingImagesArray.push(imageUrl); // Store the existing image URLs

        const imgContainer = document.createElement("div");
        imgContainer.style.display = "inline-block";
        imgContainer.style.position = "relative";
        imgContainer.style.marginRight = "10px";

        const img = document.createElement("img");
        img.src = imageUrl;
        img.style.width = "100px";
        img.style.cursor = "pointer";
        img.onclick = () => openCropper(imageUrl, img, index, 'existing'); // For existing images

        const removeButton = document.createElement("button");
        removeButton.innerText = "X";
        removeButton.style.position = "absolute";
        removeButton.style.top = "0";
        removeButton.style.right = "0";
        removeButton.style.backgroundColor = "red";
        removeButton.style.color = "white";
        removeButton.style.border = "none";
        removeButton.style.cursor = "pointer";
        removeButton.onclick = () => removeExistingImage(index);

        imgContainer.appendChild(img);
        imgContainer.appendChild(removeButton);
        imagePreviewContainer.appendChild(imgContainer);
    });
}

// Handle new image selection and preview them
function handleFiles(event) {
    const imagePreviewContainer = document.getElementById("imagePreview");
    const files = event.target.files;
    if (files.length === 0) return;

    Array.from(files).forEach((file, index) => {
        filesArray.push(file); // Add to new files array

        const reader = new FileReader();
        reader.onload = (e) => {
            const imgContainer = document.createElement("div");
            imgContainer.style.display = "inline-block";
            imgContainer.style.position = "relative";
            imgContainer.style.marginRight = "10px";

            const img = document.createElement("img");
            img.src = e.target.result;
            img.style.width = "100px";
            img.style.cursor = "pointer";
            img.onclick = () => openCropper(e.target.result, img, index, 'new'); // For new images

            const removeButton = document.createElement("button");
            removeButton.innerText = "X";
            removeButton.style.position = "absolute";
            removeButton.style.top = "0";
            removeButton.style.right = "0";
            removeButton.style.backgroundColor = "red";
            removeButton.style.color = "white";
            removeButton.style.border = "none";
            removeButton.style.cursor = "pointer";
            removeButton.onclick = () => removeNewImage(index);

            imgContainer.appendChild(img);
            imgContainer.appendChild(removeButton);
            imagePreviewContainer.appendChild(imgContainer);
        };

        reader.readAsDataURL(file);
    });
}

// Open cropper for both existing and new images
function openCropper(imageSrc, imgElement, index, type) {
    const cropModal = document.getElementById("cropModal");
    const croppingImage = document.getElementById("croppingImage");

    currentImgElement = imgElement;
    croppedFileIndex = { index, type }; // Store the index and type of file being cropped (existing/new)

    croppingImage.src = imageSrc;
    cropModal.style.display = "block";

    if (cropper) {
        cropper.destroy();
    }

    cropper = new Cropper(croppingImage, {
        aspectRatio: 1,
        viewMode: 2,
    });
}

// Crop image and update preview
function cropImage() {
    const canvas = cropper.getCroppedCanvas();

    canvas.toBlob((blob) => {
        const croppedFile = new File([blob], "cropped-image.png", { type: 'image/png' });

        if (croppedFileIndex.type === 'new') {
            // Replace the new image in filesArray
            filesArray[croppedFileIndex.index] = croppedFile;
        } else {
            // Replace the existing image in existingImagesArray
            const reader = new FileReader();
            reader.onload = (e) => {
                existingImagesArray[croppedFileIndex.index] = e.target.result; // Update image URL
                currentImgElement.src = e.target.result; // Update preview
            };
            reader.readAsDataURL(croppedFile);
        }

        // Close the crop modal
        document.getElementById("cropModal").style.display = "none";
        cropper.destroy();
        cropper = null;
    }, 'image/png');
}

// Remove an existing image
function removeExistingImage(index) {
    existingImagesArray.splice(index, 1); // Remove from array
    updateImagePreview(); // Refresh the preview
}

// Remove a new image
function removeNewImage(index) {
    filesArray.splice(index, 1); // Remove from array
    updateImagePreview(); // Refresh the preview
}

// Update the preview for both existing and new images
function updateImagePreview() {
    const imagePreviewContainer = document.getElementById("imagePreview");
    imagePreviewContainer.innerHTML = ""; // Clear current preview

    // Display existing images
    existingImagesArray.forEach((imageUrl, index) => {
        const imgContainer = document.createElement("div");
        imgContainer.style.display = "inline-block";
        imgContainer.style.position = "relative";
        imgContainer.style.marginRight = "10px";

        const img = document.createElement("img");
        img.src = imageUrl;
        img.style.width = "100px";
        img.style.cursor = "pointer";
        img.onclick = () => openCropper(imageUrl, img, index, 'existing');

        const removeButton = document.createElement("button");
        removeButton.innerText = "X";
        removeButton.style.position = "absolute";
        removeButton.style.top = "0";
        removeButton.style.right = "0";
        removeButton.style.backgroundColor = "red";
        removeButton.style.color = "white";
        removeButton.style.border = "none";
        removeButton.style.cursor = "pointer";
        removeButton.onclick = () => removeExistingImage(index);

        imgContainer.appendChild(img);
        imgContainer.appendChild(removeButton);
        imagePreviewContainer.appendChild(imgContainer);
    });

    // Display new images
    filesArray.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = (e) => {
            const imgContainer = document.createElement("div");
            imgContainer.style.display = "inline-block";
            imgContainer.style.position = "relative";
            imgContainer.style.marginRight = "10px";

            const img = document.createElement("img");
            img.src = e.target.result;
            img.style.width = "100px";
            img.style.cursor = "pointer";
            img.onclick = () => openCropper(e.target.result, img, index, 'new');

            const removeButton = document.createElement("button");
            removeButton.innerText = "X";
            removeButton.style.position = "absolute";
            removeButton.style.top = "0";
            removeButton.style.right = "0";
            removeButton.style.backgroundColor = "red";
            removeButton.style.color = "white";
            removeButton.style.border = "none";
            removeButton.style.cursor = "pointer";
            removeButton.onclick = () => removeNewImage(index);

            imgContainer.appendChild(img);
            imgContainer.appendChild(removeButton);
            imagePreviewContainer.appendChild(imgContainer);
        };

        reader.readAsDataURL(file);
    });
}

